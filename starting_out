#include <iostream>
#include <cmath>
using namespace std;

int main() {
    
    int x = 0;
    int y = 0;
    int z = x;
    string sign;
    
    cout << "" << endl;
    cout << "Only the first value can be squared" << endl;
    cout << "Input first number: ";
    cin >> x;
    cout << "Input second number: ";
    cin >> y;
    cout << "Choose an operator (+,-,/,*,^2,%,): ";
    cin >> sign;
    
    if (sign == "+") {
        cout << (float) x + y << endl;
    } else if (sign == "*") {
        cout << (float) x * y << endl;
    } else if (sign == "/") {
        cout << (float) x / y << endl;
    } else if (sign == "-") {
        cout << (float) x - y << endl;
    } else if (sign == "^2") {
        cout << (float) x * x << endl;
    } else if (sign == "%") {
        cout << (x % y) << endl;
    } else {
        cout << "What is you doing... Input an operator" << endl;
    }
    
}






#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
	int value;
	int value2;
	int choice;

	cout << " Enter a value " << endl;
	cin >> value >> value2;

	cout << " Enter a operation " << endl;
	cout << "1. Add Values" << endl;
	cout << "2. Subtract Values" << endl;
	cout << "3. Multiply Values" << endl;
	cout << "4. Divide Values" << endl;
	cin >> choice;
	
	switch (choice)
	{
	case 1:
		cout << " The sum of your number is " << value + value2 << endl;
		break;
	case 2:
		cout << " The difference of your number is " << value - value2 <<endl;
		break;
	case 3:
		cout << " The product of your number is " << value*value2 <<endl;
		break;
	case 4:
		cout << " The quotient of your number is " << value/value2 <<endl;
		break;
	default:
		cout << " Invalid Operation " << endl;
	}

	return 0;
}
