#include <iostream>
#include <iomanip> //For setprecision
using namespace std;

double MilesToLaps(double userMiles);
int main() 
{
    double userMiles = 0;
    double laps = MilesToLaps(userMiles);

    cout << "How many miles did you run? " << endl;
    cin >> userMiles;
    cout <<fixed<<setprecision(2)<< "That's "<< MilesToLaps(userMiles) << " laps"<<endl;

    return 1;
}
double MilesToLaps(double userMiles)
{
    //double laps = userMiles / 0.25;

   return userMiles/0.25;
}

#include <iomanip>
using namespace std;

double MilesToLaps(double inputLaps)
{
   double calculation;
   calculation = inputLaps / 0.25;
   
   return calculation;
}

int main()
{
   double userInput = 0;
    cout << "Input number of mile(s) you completed: ";
    cin >> userInput;

   cout << fixed << setprecision(2) << "You have done " << MilesToLaps(userInput) << " laps." << endl;
   
   return 0;
}
