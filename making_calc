#include <iostream>
using namespace std;

int main() {
    
    int x = 0;
    int y = 0;
    int z = x;
    string sign;
    
    cout << "" << endl;
    cout << "Only the first value can be squared" << endl;
    cout << "Input first number: ";
    cin >> x;
    cout << "Input second number: ";
    cin >> y;
    cout << "Choose an operator (+,-,/,*,^2,%): ";
    cin >> sign;
    
    if (sign == "+") {
        cout << (float) x + y << endl;
    } else if (sign == "*") {
        cout << (float) x * y << endl;
    } else if (sign == "/") {
        cout << (float) x / y << endl;
    } else if (sign == "-") {
        cout << (float) x - y << endl;
    } else if (sign == "^2") {
        cout << (float) x * x << endl;
    } else if (sign == "%") {
        cout << (x % y) << endl;
    } else {
        cout << "What is you doing... Input an operator" << endl;
    }
    
}
